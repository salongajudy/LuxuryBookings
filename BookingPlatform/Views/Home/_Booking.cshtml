@model BookingPlatform.Models.Bookings
    <form id="frmBooking">
        @Html.HiddenFor(m => m.RoomId, null)
        @Html.HiddenFor(m => m.Room.Capacity, null)
        <div id="msg-user" class="alert alert-dismissable col-12" role="alert" style="display:none;">
            <a href='#' class='close' onclick='$("#msg-user").hide()' aria-label='close'>&times;</a>
            <p style="margin: 0px !important;"></p>
        </div>
        <div class="form-group">
            @Html.Label("Room", new { @class = "col-sm-3 lbl" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Room.Title, null, new { @class = "form-control txt", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Email Address", new { @class = "col-sm-3 lbl" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.EmailAddress, null, new { @class = "form-control txt" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Date From", new { @class = "col-sm-3 lbl" })
            <div class="col-sm-9">
                @Html.TextBox("DateFrom",(Model.DateFrom != DateTime.MinValue ? Model.DateFrom.ToString() :  ""), null, new { @class = "form-control txt" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Date To", new { @class = "col-sm-3 lbl" })
            <div class="col-sm-9">
                @Html.TextBox("DateTo",(Model.DateTo != DateTime.MinValue ? Model.DateTo.ToString() :  ""), null, new { @class = "form-control txt" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Visitor/s", new { @class = "col-sm-3 lbl" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.PersonNo, null, new { @class = "form-control txt" })
            </div>
        </div>
        
    </form>
