@model System.Web.Mvc.HandleErrorInfo
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Error</h1>
        @if (Model != null)
        {
            <h2>
                @Model.Exception.InnerException
                <br />
                @Model.ControllerName
            </h2>
        }
        else
        {
            <h2>An error occurred while processing your request.</h2>
        }

    </hgroup>
</body>
</html>
